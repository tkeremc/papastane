@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Papastane Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/admin/adminindex/index/style.css">
    <link rel="stylesheet" href="~/admin/adminindex/anaekran/style.css">
    <link rel="icon" href="~/admin/images/111.svg" type="image/x-icon">
    <style>
        .bigger-main {
            position: absolute;
            left: 150px;
            z-index: 1;
        }

        .bigger-main-two {
            position: absolute;
            margin-left: 20px;
            left: 800px;
            z-index: 1;
        }

        .main {
            width: 640px;
            height: 720px;
            background-color: #ab88c6;
            margin-top: 29px;
            border-radius: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .main h2 {
            position: absolute;
            z-index: 8;
            background-color: rgba(255, 255, 255, 0.7);
            padding: 10px;
            border-radius: 25px;
        }

        .link {
            position: absolute;
            top: 29px;
            z-index: 9;
            width: 100%;
            height: calc(100% - 29px);
            border: 10px solid #ab88c6;
            border-radius: 25px;
            transition: border-color 0.5s ease;
        }

        .link:hover {
            border-color: #fff;
        }

        .foto {
            width: 580px;
            border-radius: 25px;
        }
    </style>
</head>

<body>
    @await Html.PartialAsync("_navbar")

    <div class="bigger-main">
        <div class="main">
            <a class="link" href="/admin/categoryedit"></a>
            <h2>Kategori Düzenleme</h2>
            <img class="foto" src="~/Cupcakes/2.svg" alt="">
        </div>
    </div>
    <div class="bigger-main-two">
        <div class="main">
            <a class="link" href="/admin/combiner"></a>
            <h2>Yemek Düzenleme</h2>
            <img class="foto" src="~/Cupcakes/1.svg" alt="">
        </div>
    </div>











    <div id="a"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
    </script>
    <script src="~/admin/adminindex/index/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous">
    </script>
</body>

</html>